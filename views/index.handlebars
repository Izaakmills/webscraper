<div class="container">

    <div class="jumbotron jumbotron-fluid text-center">
        <div class="container">
            <h1 class="display-4">NPR News Scraper</h1>
            <a href="/scrape">
                <button type="button" class="btn btn-info">Fresh Scrape</button>
            </a>
            <h4 class="lead">Select article to write a note.{{example}}</h4>
        </div>
    </div>


    <div class="row">
        {{#each result}}
        <div class="col-sm-6 col-lg-4">
            <div class="card text-center" style="width: 18rem;">
                <img class="card-img-top" src={{this.image}} alt="Image missing">
                <div class="card-body">
                    <a href="">
                        <h5 class="card-title">{{this.title}}</h5>
                    </a>
                    <p class="card-text">{{this.article}}.</p>
                    <a href="{{this.link}}" class="btn btn-info btn-block btn-sm">Read More</a>
                    <button class="btn btn-info btn-block btn-sm" type="button" data-id={{this._id}} data-toggle="collapse" data-target="#collapseExample"
                        aria-expanded="false" aria-controls="collapseExample">
                        Comment
                    </button>
                    <span class="oi oi-icon-name" title="icon name" aria-hidden="true"></span>
                    </p>
                </div>
            </div>
        </div>
        </a>
        {{/each}}
    </div>
</div>
</div>